{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://grafana:3100",
          "labels": [
            {
              "key": "service",
              "value": "inventory-service"
            },
            {
              "key": "environment",
              "value": "production"
            }
          ],
          "propertiesAsLabels": [
            "ServiceName"
          ]
        }
      }
    ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=inventory-db;Port=5432;Database=inventorydb;Username=postgres;Password=postgres"
  },
  "RabbitMQ": {
    "Uri": "amqp://guest:guest@rabbitmq:5672"
  },
  "Jwt": {
    "Secret": "ThisIsADevelopmentSecretKeyThatIsLongEnoughForHmacSha256!!",
    "Issuer": "OR.AuthService",
    "Audience": "OR.Services"
  },
  "ProductService": {
    "BaseUrl": "http://product-service:8080"
  },
  "OpenTelemetry": {
    "OtlpEndpoint": "http://grafana:4317"
  }
}
